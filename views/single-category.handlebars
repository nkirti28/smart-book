<!-- Header-->

<header class="bg-dark py-3">
  <div class="container px-4 px-lg-5 my-3">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder text-warning">{{category.category_name}}</h1>
      <p class="lead fw-normal text-white-50 mb-0">Choose Your Adventure</p>
    </div>
  </div>
</header>

<!-- Section-->
<section class="py-3">
  <div class="container px-4 px-lg-5 mt-3">
    <!--Start of Cards DIV-->
    <div
      class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"
    >
    {{#each category as |category|}}
    {{> book-card category}}
    {{/each}}

    </div>
  </div>
</section>


<script src="/javascript/shoppingcart.js"></script>