<section>
  <div class="container">
    <h2 class="text-white">We've Got You!</h2>
    <h3 class="text-white">Here Are Your Books</h3>

    <!-- Cart table -->
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">Shoppingcart Id</th>
          <th scope="col">User Id</th>
          <th scope="col">Username</th>
          <th scope="col">Book Id</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody id="cartTableBody">
        <!--Shopping Cart data -->
        {{#each carts as |cart|}}
          <tr>
            <td id="item">{{id}}</td>
            <td>{{user_id}}</td>
            <td>{{user.username}}</td>
            <td>{{book_id}}</td>
            <td>{{book.book_name}}</td>
            <td>${{book.price}}</td>
            <td><button type="button" class="removeCart-btn btn btn-danger btn-sm">REMOVE</button></td>
          </tr>
          <!-- /Shopping Cart data -->
        {{/each}}
        <!--total price-->
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>Total:</td>
          <td>$</td>
        </tr>
      </tbody>
    </table>
    <!-- /Cart table -->

    <a
      type="button"
      class="btn btn-secondary"
      href="\category"
      id="continueBrowsing"
    >
      Continue browsing
    </a>
    <button type="button" class="btn btn-secondary" id="purchasesHistory">
      Purchases history
    </button>
    <button type="button" class="btn btn-primary" id="confirmPurchase">
      Confirm purchase!
    </button>
  </div>
</section>

<script src="/public/javascript/shoppingcart.js"></script>
